---
import Layout from '../../layouts/BaseLayout.astro'
import Prose from '../../components/Prose.astro'

const mainAlbums = [
  {
    title: 'Random',
    tn: 'https://kaliatech-media.s3.amazonaws.com/kt-processor-test1/favorites/IMG_1566.JPG/IMG_1566.640x360.avif',
    url: '/photos/random',
  },
  {
    title: 'Rides',
    tn: 'https://kaliatech-media.s3.amazonaws.com/kt-processor-test1/rides/20070623/IMG_1074.JPG/IMG_1074.640x360.avif',
    url: '/photos/random',
  },
  {
    title: 'Projects',
    tn: 'https://kaliatech-media.s3.amazonaws.com/kt-processor-test1/deepfile1.jpg/deepfile1.1280x720.avif',
    url: '/photos/random',
  },
  {
    title: 'Favorites',
    tn: 'https://kaliatech-media.s3.amazonaws.com/kt-processor-test1/deepfile1.jpg/deepfile1.1280x720.avif',
    url: '/photos/random',
  },
]
---

<Layout title="Photos | Kaliatech">
  <div class="mt-4">
    <h1>Photos</h1>
    <h2 class="my-4">Random photos and videos</h2>
  </div>

  <Prose class="photos">
    <div class="grid grid-cols-1 md:grid-cols-2">
      {
        mainAlbums.map((album) => (
          <div class="mr-8">
            <h2 class="mt-4">{album.title}</h2>
            <a href={album.url} class="m-0">
              <div class="images-stack images-stack-dark rounded-lg">
                <img
                  class="mb-0 mt-0 rounded-lg border-2 border-white/50 dark:border-gray-300/50"
                  src={album.tn}
                  alt={album.title}
                />
              </div>
            </a>
          </div>
        ))
      }
    </div>
  </Prose>
</Layout>
