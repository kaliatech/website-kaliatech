---
import Layout from '../../../layouts/BaseLayout.astro'
---

<Layout title="Books | Kaliatech">
  <div class="my-4">
    <h1 class="font-semibold">Books</h1>
    <p class="pt-3">
      Books I'm reading or have recently read according to
      <a href="https://www.goodreads.com/user/show/41777790-josh-sanderson">GoodReads</a>
      .
    </p>
  </div>
  <div class="row">
    <div class="col-12">
      <h3>Currently Reading</h3>
      <div id="goodreads-currently-reading">
        <div id="gr_grid_widget_1548192416">
          <div class="gr_grid_container" style="display:flex"></div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <h3>Recently Read</h3>
      <div id="goodreads-recently-read">
        <div id="gr_grid_widget_1548192044">
          <div class="gr_grid_container"></div>
        </div>
      </div>
    </div>
  </div>
</Layout>
<style is:global>
  .books a:link,
  .books a:visited {
    font-weight: bold;
  }

  .gr_grid_container {
    /* customize grid container div here. eg: width: 500px; */
  }

  .gr_grid_book_container {
    /* customize book cover container div here */
    display: inline-block;
    width: 102px;
    height: 160px;
    margin: 2px 2px;
    overflow: hidden;
    img {
      height: 100%;
      width: 100%;
    }
  }
</style>

<script>
  let script = document.createElement('script')
  script.async = true
  script.id = 'goodreads-reading'
  script.src =
    "https://www.goodreads.com/review/grid_widget/41777790.Josh's%20currently-reading%20book%20montage?cover_size=medium&hide_link=true&hide_title=true&num_books=200&order=d&shelf=currently-reading&sort=date_read&widget_id=1548192416"

  document.getElementById('goodreads-currently-reading')?.appendChild(script)

  script = document.createElement('script')
  script.async = true
  script.id = 'goodreads-read'
  script.src =
    'https://www.goodreads.com/review/grid_widget/41777790.Recently%20Read?cover_size=medium&hide_link=&hide_title=true&num_books=200&order=d&shelf=read&sort=date_read&widget_id=1548192044'

  document.getElementById('goodreads-recently-read')?.appendChild(script)
</script>
